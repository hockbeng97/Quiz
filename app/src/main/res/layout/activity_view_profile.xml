<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".view_Profile">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="657dp"
        android:background="@drawable/fresh_gradient"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Profile"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:paddingBottom="10dp"
                android:background="#FFFAF0">


                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_email"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:background="@drawable/list_border" />


                <TextView
                    android:id="@+id/txtusername"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_username"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:inputType="textMultiLine"
                    android:background="@drawable/list_border" />

                <TextView
                    android:id="@+id/txtuni"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_uni"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:inputType="textMultiLine"
                    android:background="@drawable/list_border" />


                <TextView
                    android:id="@+id/view_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/view_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtusername"
                    android:layout_marginTop="10dp"
                    android:text="School or University"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtEmail"
                    android:layout_marginTop="10dp"
                    android:text="Username"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/editBtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Edit &#10; Profile"
                    android:layout_below="@+id/txtuni"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="#778899"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/changeBtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Change Password"
                    android:layout_below="@+id/txtuni"
                    android:layout_toRightOf="@+id/editBtn"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="#778899"
                    android:textSize="18dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/acc_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/layout2"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Account Settings"/>


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Delete Account"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_border"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/logout"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Log out"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/delete"
                    android:background="@drawable/list_border"
                    android:gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/logout"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="General"/>

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:text="Contact Us"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/list_border"
                    android:padding="4dp"
                    android:autoLink="email"
                    android:layout_below="@+id/general"/>

                <TextView
                    android:id="@+id/term"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:text="Term and Conditions"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_border"
                    android:padding="4dp"
                    android:layout_below="@+id/contact"/>


                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:text="About Us"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_border"
                    android:padding="4dp"
                    android:layout_below="@+id/term"/>

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>