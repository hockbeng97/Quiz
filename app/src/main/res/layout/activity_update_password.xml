<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePassword">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fresh_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Update Password"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:paddingBottom="10dp"
                android:background="#FFFAF0">

                <TextView
                    android:id="@+id/view_oldpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="Enter old password"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/txtoldpw"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/view_oldpw"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:singleLine="false"
                    android:background="@drawable/list_border" />


                <TextView
                    android:id="@+id/view_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtoldpw"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="Enter new password"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/txtpassword"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pw"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:singleLine="false"
                    android:background="@drawable/list_border" />

                <TextView
                    android:id="@+id/view_pw1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtpassword"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="Re-enter new password"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/txtpassword1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_pw1"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_border" />

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:layout_below="@+id/txtpassword1"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="#778899"
                    android:textSize="18dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>