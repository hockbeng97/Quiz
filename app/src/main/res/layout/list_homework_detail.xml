<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:background="#CCFF99"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCE5FF">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/black_border"
            android:padding="2dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/image"
            android:text="question"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question"
            android:text="Your answer:"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/user_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer"
            android:text="user ans"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14dp"/>

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative1"
            android:layout_height="wrap_content"
            android:background="@drawable/option_border"
            android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/option1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="option1"
            android:textSize="15dp"
            android:textColor="#000000"/>

            <ImageView
                android:id="@+id/tick1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/option1"
                android:padding="10dp"
                android:src="@drawable/green_tick"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_border"
            android:layout_below="@+id/relative2">

        <TextView
            android:id="@+id/option2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="option2"
            android:layout_marginBottom="0dp"
            android:textColor="#000000"
            android:padding="8dp"
            android:textSize="15dp"/>

         <ImageView
             android:id="@+id/tick2"
             android:layout_width="50dp"
             android:layout_height="40dp"
             android:layout_toRightOf="@+id/option2"
             android:src="@drawable/green_tick"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:scaleType="centerCrop"
             android:visibility="invisible"
             android:padding="10dp" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_border"
        android:layout_below="@+id/relative3">

        <TextView
            android:id="@+id/option3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="option3"
            android:layout_marginBottom="0dp"
            android:textColor="#000000"
            android:padding="8dp"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/tick3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/option3"
            android:src="@drawable/green_tick"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:padding="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/option_border"
        android:layout_below="@+id/relative4">

        <TextView
            android:id="@+id/option4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="option4"
            android:layout_marginBottom="0dp"
            android:textColor="#000000"
            android:padding="8dp"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/tick4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/option4"
            android:src="@drawable/green_tick"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:padding="10dp" />


    </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>