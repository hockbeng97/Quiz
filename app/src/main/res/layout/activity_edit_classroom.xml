<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5CCFF"
    tools:context=".EditClassroom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/announcement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/addClass"
            android:text="Edit Classroom Name : "
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/classroomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="3dp"
            android:layout_below="@+id/announcement_title"
            android:textColor="#000000"
            android:textSize="15dp"
            android:background="@drawable/search_view"
            android:padding="10dp"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/classroomName"
            android:textColor="#FFFFFF"
            android:text="Update"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#6666FF"
            android:padding="10dp"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/updateBtn"
            android:layout_below="@id/classroomName"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Delete"
            android:textSize="20dp"
            android:background="#6666FF"
            android:padding="10dp"/>


    </RelativeLayout>


</RelativeLayout>