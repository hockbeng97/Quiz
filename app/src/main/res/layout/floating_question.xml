<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/light_blue"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">


                <ImageView
                    android:id="@+id/imageInput"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#FFFFCC"
                    android:layout_marginTop="50dp"/>


                <TextView
                    android:id="@+id/timer"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/search_view"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:hint="Enter the Question"
                    android:background="@drawable/search_view"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:inputType="textMultiLine"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:inputType="textMultiLine"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/option1"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/grey_tick1"
                    android:scaleType="centerCrop"
                    android:padding="20dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option2"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:inputType="textMultiLine"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/option2"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grey_tick1"
                    android:layout_centerVertical="true"
                    android:padding="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/option3"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="textMultiLine" />

                <ImageView
                    android:id="@+id/tick3"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/option3"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grey_tick1"
                    android:layout_centerVertical="true"
                    android:padding="20dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/option4"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="30dp"/>

                <ImageView
                    android:id="@+id/tick4"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@+id/option4"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grey_tick1"
                    android:layout_centerVertical="true"
                    android:padding="20dp"/>


            </RelativeLayout>






        </LinearLayout>

    </ScrollView>




</RelativeLayout>