<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".CreateQuestion">


    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/light_blue"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">


                <ImageView
                    android:id="@+id/imageInput"
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/dash_border" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Click to Add Image"
                    android:textSize="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:background="#033666"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/cancelBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="7dp"
                    android:background="#033666"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/timer"
                    android:layout_width="100dp"
                    android:dropDownWidth="200dp"
                    android:layout_height="38dp"
                    android:theme="@style/Spinner"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_view"
                    android:entries="@array/timer"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:hint="Enter the Question"
                    android:background="@drawable/search_view"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:inputType="textMultiLine"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/option1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:inputType="textMultiLine"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/grey_tick1"
                    android:padding="20dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/option2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:inputType="textMultiLine"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/grey_tick1"
                    android:padding="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/option3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option (Optional)"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="textMultiLine" />

                <ImageView
                    android:id="@+id/tick3"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/grey_tick1"
                    android:padding="20dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/option4"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Add Option (Optional)"
                    android:background="@drawable/search_view"
                    android:padding="8dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="30dp"/>

                <ImageView
                    android:id="@+id/tick4"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/grey_tick1"
                    android:padding="20dp"/>


            </RelativeLayout>






        </LinearLayout>

    </ScrollView>

</RelativeLayout>